
@{
    ViewBag.Title = "Verification";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<script src="jquery-3.5.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        /* $("#xyz").hide();*/

        $('#table_1').DataTable();


        //$("#btnShow").click(function () {
        //    $("#xyz").show();
        //});

    });

    function myFunction() {

        var x = document.getElementById("xyz");
        if (x.style.display === "none") {
            x.style.display = "block";
            $("#xyz").css("width", "99%");
        } else {
            x.style.display = "none";
        }
    }

</script>


<div class="container">
    <div class="content">
        <div class="card stacked-form" style="border:none; min-height:550px;">

            <div class="card text-center" style="background-color:whitesmoke; border:none;">
                <div class="card-header" style="background-color:whitesmoke">
                    <h3>Appraisal & Assests Verification</h3>
                </div>
            </div>

            <div class="col-md-12" style="background-color:white; border-style:hidden;">
                <h4 class="text-center"><b>Meeting Details and Logs</b></h4>
                <table class="table" id="table_1" cellspacing="0" width="100%" style="width:100%;">
                    <thead class="thead-light" style="background-color:whitesmoke">
                        <tr>
                            <th>Meeting ID</th>
                            <th>App ID</th>
                            <th>Meeting Type</th>
                            <th>Meeting Place</th>
                            <th>App Status</th>
                            <th>Date & Time</th>
                            <th>Meeting Remarks</th>
                            <th>View Doc</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>25</td>
                            <td>Online</td>
                            <td>ABC Street</td>
                            <td>In Process</td>
                            <td>07-06-2021</td>
                            <td>Agree</td>
                            <th><a href="#" onclick="myFunction()" style="color:black"><b>View</b></a></th>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>25</td>
                            <td>Online</td>
                            <td>ABC Street</td>
                            <td>In Process</td>
                            <td>07-06-2021</td>
                            <td>Agree</td>
                            <th><a href="#" onclick="myFunction()" style="color:black"><b>View</b></a></th>
                        </tr>
                    </tbody>
                </table>
            </div>

            <br />
            <div id="line"><hr style="border: 0; clear: both; display: block; width: 96%; background-color: lightgray; height: 1px;" /></div>

            <div class="col-md-12" style="background-color:white; border-style:hidden;">
                <h4 class="text-center"><b>Assests Verification Entry</b></h4>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="file" class="form-control" id="inputAddress" placeholder="Browse File to Upload">
                        </div>
                        <div class="form-group col-md-6">
                            <select id="inputState" class="form-control">
                                <option disabled selected>Select Qualification Status</option>
                                <option>Pending</option>
                                <option>Approved/option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <textarea class="form-control" placeholder="Remarks" style="height:100px; resize:none;"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-3 ml-auto">
                                <button type="submit" class="btn btn-fill btn-outline-dark btn-wd" style="background-color:black;color:white">Save</button>
                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="col-md-12 " style="background-color:white;">
                <h4 class="text-center"><b>Document Viewer</b></h4>
                <div class="text-center">

                    <iframe id="xyz" src="~/Areas/PropertyGuru/Doc/Mudassar_Khan.pdf" style="width:100%;height:500px; overflow-x:auto;"></iframe>
                    @*<embed id="frPDF" height="100%" width="100%" src="~/Areas/Property_Guru/Doc/Mudassar_Khan.pdf&embedded=true"></embed>*@
                </div>
            </div>
        </div>
    </div>
</div>
