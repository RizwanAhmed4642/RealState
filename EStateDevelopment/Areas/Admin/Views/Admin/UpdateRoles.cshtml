@model  EStateDevelopment.Areas.Admin.ViewModel.RoleViewModel

@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>



<div class="card stacked-form">
    <div class="card-header">
        <h5 class="card-title">Update User Role</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("UpdateRoles", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Status)
            <div class="row">
                <div class="form-group col-md-5">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Role Name", } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger db" })


                </div>
            </div>
            <div class="col-md-12 mr-auto ml-auto">
                <button type="submit" class="btn btn-fill btn-info btn-wd fr">Submit</button>
            </div>


        }
    </div>

</div>

<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>


