@model EStateDevelopment.Data.ProductDocumentType
@{
    ViewBag.Title = " AddProducDoctType";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <div class="content">
        <div class="card stacked-form" style="border:none; min-height:300px;">

            <div class="card text-center" style="background-color:whitesmoke; border:none;">
                <div class="card-header" style="background-color:whitesmoke">
                    <h3>Product Document Type</h3>
                </div>
            </div>
            @using (Html.BeginForm("AddProducDoctType", "Configuration", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <div class="col-md-12" style="background-color:white;">

                    <div class="col-md-6 mr-auto ml-auto">
                        @Html.EditorFor(model => model.DocumentType, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Type" } })
                        @Html.ValidationMessageFor(model => model.DocumentType, "", new { @class = "text-danger" })
                    </div>
                    <br />

                    <div class="form-group" style="margin-top:50px;">
                        <div class="col-md-12">
                            <div class="text-center">
                                <button type="submit" class="btn btn-fill btn-outline-dark btn-wd" style="background-color:black;color:white">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

