@model IEnumerable<EStateDevelopment.Data.ProductDocumentType>
@{
    ViewBag.Title = "ListProductDocType";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}


<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="jquery-3.5.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        $('#table_1').DataTable();
    });

</script>

<body>
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12 mr-auto ml-auto">
                    <div class="row">
                        <div class="col-md-12 adj-gridhead ">
                            <h4>List Products Documents Types<small>(Administator)</small></h4>
                        </div>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="card data-tables">
                            <div class="card-body table-full-width">
                                <div class="toolbar">
                                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                                </div>
                                <div>
                                    <table id="table_1" class="table" cellspacing="0" width="100%" style="width:100%">
                                        <thead class="thead-light" style="background-color:whitesmoke;font-size:small">
                                            <tr>
                                                <th scope="col">@Html.DisplayNameFor(model => model.DocumentType)</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var P in Model)
                                             {
                                                <tr>
                                                    <td scope="row">@P.DocumentType</td>
                                                    <td scope="row">
                                                        <a title="Edit" href="@Url.Action("EditProDocType", "Configuration", new { id = P.ProductDocumentTypeID })"> <i class="fa fa-edit" aria-hidden="true" style="font-size:20px; color:black"></i></a>
                                                        <a title="Delete" href="@Url.Action("DeleteProDocType", "Configuration", new { id = P.ProductDocumentTypeID })"> <i class="fa fa-trash" aria-hidden="true" style="font-size:20px; color:black"></i></a>
                                                    </td>
                                                </tr>
                                             }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
