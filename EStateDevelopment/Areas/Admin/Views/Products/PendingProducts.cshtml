@model IEnumerable<EStateDevelopment.Data.Product>
@{
    ViewBag.Title = "Pending Products";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="jquery-3.5.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        $('#table_1').DataTable();
        $('#table_2').DataTable();
        $('#table_3').DataTable();
    });

</script>

<body>
    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12 mr-auto ml-auto">
                    <div class="row">
                        <div class="col-md-12 adj-gridhead ">
                            <h4>Pending Products <small>(Administator)</small></h4>
                        </div>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="card data-tables">
                            <div class="card-body table-full-width">
                                <div class="toolbar">
                                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                                </div>
                                <div class="fresh-datatables">
                                    <table id="table_1" class="table" cellspacing="0" width="100%" style="width:100%">
                                        <thead class="thead-light" style="background-color:whitesmoke;font-size:small">
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                                <th>@Html.DisplayNameFor(model => model.ProductType)</th>
                                                <th>@Html.DisplayNameFor(model => model.RateofReturn)</th>
                                                <th>@Html.DisplayNameFor(model => model.UserEmail)</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var P in Model)
                                            {
                                                if (P.ApprovalStatus == false && P.RejectedStatus == false)
                                                {
                                                    <tr>
                                                        <td>@P.Name</td>
                                                        <td>@P.ProductType</td>
                                                        <td>@P.RateofReturn</td>
                                                        <td>@P.UserEmail</td>
                                                        <td>
                                                            <a title="Details" href="@Url.Action("Details", "Products", new { id = P.ProductID })"> <i class="fa fa-info-circle" aria-hidden="true" style="font-size:20px; color:black"></i></a>
                                                            <a title="Approve" href="@Url.Action("Approved", "Products", new { id = P.ProductID })"> <i class="fa fa-check-square" aria-hidden="true" style="font-size:20px; color:black"></i></a>
                                                            <a title="Reject" href="@Url.Action("Reject", "Products", new { id = P.ProductID })"> <i class="fa fa-window-close" aria-hidden="true" style="font-size:20px; color:black"></i></a>
                                                        </td>
                                                    </tr>
                                                }

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="jquery.scrollable.js"></script>
</body>

