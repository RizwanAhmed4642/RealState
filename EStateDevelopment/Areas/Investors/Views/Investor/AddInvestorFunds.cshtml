@model EStateDevelopment.Data.InvestorFund

@{
    ViewBag.Title = "AddInvestorFunds";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
<div class="container">
    <div class="content">
        <div class="card stacked-form">
            <div class="card-header ">
                <div class="row">
                    <div class="col-md-5 adj-gridhead ">
                        <h4>Manage Funds History <small>(Investor)</small></h4>
                    </div>

                </div>
            </div>

            <div class="card-body ">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.InvestAmount, "Invest Amount", htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-3 ">
                                    @Html.EditorFor(model => model.InvestAmount, new { htmlAttributes = new { @class = "form-control", @placeholder="$2000" } })
                                    @Html.ValidationMessageFor(model => model.InvestAmount, "", new { @class = "text-danger" })
                                </div>




                                <div class="col-md-2 right">
                                    @Html.LabelFor(model => model.IntrestRate, "Intrest Rate", htmlAttributes: new { @class = "control-label " })

                                </div>
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.IntrestRate, "Intrest Rate", new { htmlAttributes = new { @class = "form-control", @placeholder = "1.5%" } })
                                    @Html.ValidationMessageFor(model => model.IntrestRate, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.InvestmentType, "Investment Type", htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-3 ">
                                    <select name="cities" class="selectpicker" data-title="select type" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                        <option value="id">A</option>
                                        <option value="ms">yu</option>
                                        <option value="ca">Català</option>

                                        <option value="ko">sa</option>
                                    </select>
                                </div>





                                <div class="col-md-2 right">
                                    @Html.LabelFor(model => model.InvestmentPeriod, "Investment Period ", htmlAttributes: new { @class = "control-label " })

                                </div>
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.InvestmentPeriod, "Investment Period", new { htmlAttributes = new { @class = "form-control", @placeholder = "1 Year" } })
                                    @Html.ValidationMessageFor(model => model.IntrestRate, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <div>
                        </div>
                        <div class=" form-group card-footer col-md-12 mr-auto ml-auto">
                            <input type="submit" value="Submit" class="btn btn-fill btn-info btn-wd fr">
                        </div>


                    </div>
                }
            </div>
        </div>
    </div>
</div>