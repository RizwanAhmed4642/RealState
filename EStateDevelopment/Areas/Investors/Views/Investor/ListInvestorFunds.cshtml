@model IEnumerable<EStateDevelopment.Data.InvestorFund>

@{
    ViewBag.Title = "ListInvestorFunds";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card data-tables">
                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                        <div class="toolbar">
                                <div class="row">
                                    <div class="col-md-5 adj-gridhead ">
                                        <h4>Your Fund History <small>(Investor)</small></h4>
                                    </div>

                                </div>
                        </div>
                        <div class="fresh-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">

                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Invest Amount")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Intrest Rate")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Investment Type")
                                        </th>

                                        <th>
                                            @Html.DisplayName("Investment Period")
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvestAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IntrestRate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvestmentType)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvestmentPeriod)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.InvestorFundID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.InvestorFundID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.InvestorFundID })
                                        </td>
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>