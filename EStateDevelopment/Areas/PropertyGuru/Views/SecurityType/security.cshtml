@model EStateDevelopment.Data.SecurityType
@{
    ViewBag.Title = "security";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}


<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <div class="content">
        <div class="card stacked-form" style="border:none; min-height:550px;">

            <div class="card text-center" style="background-color:whitesmoke; border:none;">
                <div class="card-header" style="background-color:whitesmoke">
                    <h3>Security Types</h3>
                </div>
            </div>

            <div class="col-md-12" style="background-color:white;">
                @using (Html.BeginForm("security", "SecurityType", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @*mr-auto ml-auto*@
                                @Html.EditorFor(model => model.SecurityName, new { htmlAttributes = new { @class = "form-control", placeholder = "Security Name" } })
                                @Html.ValidationMessageFor(model => model.SecurityName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Start Date", id = "datetimepicker", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Closing Date", id = "datetimepicker1", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.DropDownListFor(model => model.ProductID, (IEnumerable<SelectListItem>)ViewBag.ProductList, "------Select Product------", new { @class = "form-control form-control form-control-rounded" })
                                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.TextAreaFor(model => model.SecurityDetail, new { @class = "form-control", placeholder = "Security Details", style = "height:70px" })
                                @Html.ValidationMessageFor(model => model.SecurityDetail, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3 ml-auto">
                                    <button type="submit" value="security" class="btn btn-fill btn-outline-dark btn-wd" style="background-color:black;color:white">Submit</button>
                                </div>
                            </div>
                        </div>


                    </form>
                 }
            </div>


        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#datetimepicker").datepicker({
            dateFormat: "dd/MM/yy"
        }).datepicker('setDate', new Date());

        $("#datetimepicker1").datepicker({
            dateFormat: "dd/MM/yy"
        }).datepicker('setDate', new Date());
    });
</script>